{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "rootDir": "assets/scripts",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": false,
    "noEmitOnError": true
  },
  "include": ["assets/scripts/**/*.ts"],
  "exclude": ["dist"]
}
